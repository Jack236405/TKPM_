@model BanSach.Models.HoaDon

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <h1 class="mt-4">Xóa  </h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Xóa </li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="NguoiDung">Về danh sách</a>
        </div>
        <div>
            <h4>Hóa đơn</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Ngaylap)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ngaylap)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tongtien)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tongtien)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MakhNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MakhNavigation.Makh)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ManvNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ManvNavigation.Manv)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Mahd" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
            </form>
        </div>
    </div>
</div>
