@model BanSach.Models.Sach

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <h1 class="mt-4">Chỉnh sủa sách</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa Sách</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Sach">Về danh sách</a>
        </div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Masach" />
                    <div class="form-group">
                        <label asp-for="Tuasach" class="control-label"></label>
                        <input asp-for="Tuasach" class="form-control" />
                        <span asp-validation-for="Tuasach" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Namxb" class="control-label"></label>
                        <input asp-for="Namxb" class="form-control" />
                        <span asp-validation-for="Namxb" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Soluong" class="control-label"></label>
                        <input asp-for="Soluong" class="form-control" />
                        <span asp-validation-for="Soluong" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Manxb" class="control-label"></label>
                        <select asp-for="Manxb" class="form-control" asp-items="ViewBag.Manxb"></select>
                        <span asp-validation-for="Manxb" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Matl" class="control-label"></label>
                        <select asp-for="Matl" class="form-control" asp-items="ViewBag.Matl"></select>
                        <span asp-validation-for="Matl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Matg" class="control-label"></label>
                        <select asp-for="Matg" class="form-control" asp-items="ViewBag.Matg"></select>
                        <span asp-validation-for="Matg" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                            <label asp-for="Ghichu" class="control-label"></label>
                            <input asp-for="Ghichu" class="form-control" />
                            <span asp-validation-for="Ghichu" class="text-danger"></span>
                        </div>*@

                    <div class="form-group">
                        <label asp-for="Ghichu" class="control-label"></label>
                        <input type="hidden" asp-for="Ghichu" /><img src="~/images/@Html.DisplayFor(model => model.Ghichu)" class="img-thumbnail" width="50" />
                        <input type="file" name="file" />
                        <span asp-validation-for="Ghichu" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
